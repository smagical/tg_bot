    <id>win</id>

    <!-- 打包文件的类型，如果要输出多个类型的打包文件，则定义多个 -->
    <formats>
        <!--        <format>tar.gz</format>-->
<!--        <format>jar</format>-->
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>


    <!--第三方相关依赖设置-->
    <dependencySets>
        <dependencySet>
            <!-- 不使用项目的artifact，第三方依赖JAR不要解压/打包进压缩文件的lib目录下 -->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>


    <!--文件复制与设置-->
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/libs/win/dir</directory>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/libs/win</directory>
            <includes>
                <include>
                    *.dll
                </include>
            </includes>
            <outputDirectory>.</outputDirectory>

<!--                    <lineEnding>unix</lineEnding>-->
<!--                    &lt;!&ndash; 是否进行属性替换 &ndash;&gt;-->
<!--                    <filtered>true</filtered>-->
<!--                </fileSet>-->




    </fileSets>


</assembly>
